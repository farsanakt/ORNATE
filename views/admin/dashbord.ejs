    <script>
      // Calculate and update overall sales count, overall order amount, and overall discount amount
      document.addEventListener("DOMContentLoaded", function() {
        var salesCount = 0;
        var orderAmount = 0;
        var discountAmount = 0;
    
        // Iterate over each row in the order status table
        var orderRows = document.querySelectorAll(".table tbody tr");
        orderRows.forEach(function(row) {
          var orderAmountCell = row.querySelector("td:nth-child(4)");
          var discountCell = row.querySelector("td:nth-child(4)"); // Assuming discount amount is in the same column as order amount
          if (orderAmountCell && discountCell) {
            var amount = parseFloat(orderAmountCell.textContent.replace("$", "").replace(",", ""));
            var discount = parseFloat(discountCell.textContent.replace("$", "").replace(",", ""));
            salesCount++;
            orderAmount += amount;
            discountAmount += discount;
          }
        });
    
        // Update the HTML with the calculated values
        document.getElementById("overall-sales-count").textContent = "$" + salesCount;
        document.getElementById("overall-order-amount").textContent = "$" + orderAmount.toFixed(2);
        document.getElementById("overall-discount-amount").textContent = "$" + discountAmount.toFixed(2);
      });
    </script>


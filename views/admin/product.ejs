<%- include('../layouts/adminheader.ejs') %>

  <div class="container-scroller">

    <%- include('../layouts/adminsidebar.ejs') %>
    <style>

.pagination {
    margin-top: 20px;
}

.pagination.page-item.page-link {
    border-radius: 5px;
    padding: 8px 15px;
    font-size: 14px;
    line-height: 1.42857143;
    color: #fff;
    background-color: #007bff;
    border-color: #007bff;
}

.pagination.page-item.active.page-link {
    background-color: #0056b3;
    border-color: #0056b3;
}

.pagination.page-item:first-child.page-link,
.pagination.page-item:last-child.page-link {
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

.pagination.page-item:first-child.page-link,
.pagination.page-item:first-child.page-link:hover,
.pagination.page-item:first-child.page-link:focus {
    border-top-left-radius: 5px;
}

    </style>

    <div class="container-fluid page-body-wrapper">

        

      <!-- partial -->

        <div class="main-panel">

          <div class="content-wrapper">

          <h1 style="text-align: center;">ᴡᴇʟᴄᴏᴍᴇ...!</h1>
            
        <a href="/admin/addproduct" >Add Product</a>
          
        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card">
            <div class="card-body">
              <h4 class="card-title">Product List</h4>
              <!-- <p class="card-description"> Add class <code>.table-dark</code>
              </p> -->
              <div class="table-responsive">
                <table class="table table-dark">
                  <thead>
                    <tr >
                      <th class="text-danger"> # </th>
                      <th class="text-danger"> Product Name </th>
                      <th class="text-danger">  Price </th>
                      <th class="text-danger"> stock </th>
                      <th class="text-danger"> image </th>
                      <th class="text-danger"> Category</th>
                      <th class="text-danger"> Action</th>
                      
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let i = 0; i < product?.length; i++) { %>
                      <tr>
                        <td class="text-white"> <%= i+1 %> </td>
                        <td class="text-white"> <%= product[i]?.name %> </td>
                        <td class="text-white"> <%= product[i]?.price %> </td>
                        <td class="text-white"> <%= product[i]?.stock %> </td>
                        <td class="text-white"> 
                          <%
                          for(let j=0; j<3;j++){
                            %>
                            <img src="<%= product[i]?.images[j] %>" alt="">
                            <%
                          }
                          %>
                           </td>
                        <td class="text-white"> <%= product[i]?.category %> </td>
                        <td>
                          <% if (product[i].is_Listed) { %>
                           
                            <a href="/admin/unlist?id=<%= product[i]?._id %>">
                              <button class="btn btn-danger">Unlist</button>
                            </a>
                          <% } else { %>
                            
                            <a href="/admin/list?id=<%= product[i]?._id %>">
                              <button class="btn btn-success">List</button>
                            </a>
                          <% } %>
                          <a href="/admin/editproduct?id=<%= product[i]?._id %>" >
                            <button class="btn btn-danger">Edit</button>
                          </a>
                          
                          
                        </td>
                        <!-- <td class="text-white"> <%=// product[i].status %> </td> -->
                      </tr>
                      
                    <% } %>
           
                    
                   
                    
                    
                  </tbody>
                </table>
                <nav aria-label="Page navigation">
									<ul class="pagination justify-content-center">
										<% if (currentPage > 1) { %>
											<li class="page-item"><a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo; Previous</a></li>
										<% } %>
										<% for (let i = 1; i <= totalPages; i++) { %>
											<li class="page-item <%= currentPage == i? 'active' : '' %>"><a class="page-link" href="?page=<%= i %>"><%= i %></a></li>
										<% } %>
										<% if (currentPage < totalPages) { %>
											<li class="page-item"><a class="page-link" href="?page=<%= currentPage + 1 %>">Next &raquo;</a></li>
										<% } %>
									</ul>
								</nav>

              </div>
            </div>
          </div>
        </div>


          </div>

        </div>

    </div>

</div> <!--End container scroller-->






<%- include('../layouts/footer.ejs') %>
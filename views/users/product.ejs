	<script>

		// Add cart
		function addCart(id) {
			fetch(`/addCart?id=${id}`, { method: 'post' })
				.then(res => {
					if (!res.ok) {
						throw new Error('Network response was not ok');
					}
					return res.json();
				})
				.then(data => {
					if (data.succ) {
						// Show success alert
						Swal.fire({
							icon: 'success',
							title: 'Success!',
							text: 'Added to cart',
							showConfirmButton: false,
							timer: 1500
						});
					} else if (data.fail) {
						// Show error alert
						Swal.fire({
							icon: 'error',
							title: 'Error!',
							text: 'Already existed',
							showConfirmButton: false,
							timer: 1500
						});
					}
				})
				.catch(error => {
					// Show error alert
					Swal.fire({
						icon: 'error',
						title: 'Error!',
						text: 'An error occurred',
						showConfirmButton: false,
						timer: 1500
					});
					console.error('Error:', error);
				});
		}
	</script>


